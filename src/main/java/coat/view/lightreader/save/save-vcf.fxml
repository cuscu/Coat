<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
         type="BorderPane" prefWidth="500">
    <center>
        <VBox spacing="5" alignment="TOP_CENTER">
            <Label text="INFO fields"/>
            <ScrollPane fitToHeight="true" VBox.vgrow="ALWAYS">
                <FlowPane orientation="VERTICAL" fx:id="infos" hgap="5"
                          vgap="5"/>
            </ScrollPane>
            <Label text="Samples"/>
            <ScrollPane fitToHeight="true" VBox.vgrow="ALWAYS">
                <FlowPane orientation="VERTICAL" fx:id="samples" hgap="5"
                          vgap="5"/>
            </ScrollPane>
            <Button text="Save" onAction="#save"/>
        </VBox>
    </center>
    <padding>
        <Insets top="5" bottom="5" left="5" right="5"/>
    </padding>
</fx:root>
