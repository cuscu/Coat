<?import coat.view.graphic.FileList?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<fx:root type="VBox" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
    <VBox alignment="TOP_CENTER" spacing="5" VBox.vgrow="ALWAYS">
        <padding>
            <Insets right="5" left="5" bottom="5" top="5"/>
        </padding>
        <Label text="%include.files"/>
        <FileList fx:id="files" VBox.vgrow="SOMETIMES" maxWidth="Infinity"/>
        <Button fx:id="startButton" text="%combine" maxWidth="Infinity">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </Button>
        <Label fx:id="messageLabel"/>
    </VBox>
</fx:root>
