<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coat.view.poirot.gene.GeneListController">
    <children>
      <StackPane>
         <children>
            <TextField fx:id="searchBox">
               <StackPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </StackPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="25.0" top="5.0" />
               </padding>
            </TextField>
            <ImageView fx:id="searchImage" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER_RIGHT">
               <StackPane.margin>
                  <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
               </StackPane.margin>
            </ImageView>
         </children>
      </StackPane>
        <TableView fx:id="geneTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="select" maxWidth="100" minWidth="50.0" prefWidth="50" text="Select" />
                <TableColumn fx:id="score" maxWidth="100.0" minWidth="50.0" prefWidth="75.0" text="Score" />
                <TableColumn fx:id="distance" maxWidth="100.0" minWidth="50.0" prefWidth="75.0" text="Distance" />
                <TableColumn fx:id="gene" minWidth="50.0" text="Gene" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
