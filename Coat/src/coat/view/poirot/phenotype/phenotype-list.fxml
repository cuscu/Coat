<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="coat.view.poirot.phenotype.PhenotypeListController">
    <children>
        <StackPane>
            <children>
                <TextField fx:id="searchBox">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                    <StackPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </StackPane.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="25.0" top="5.0"/>
                    </padding>
                </TextField>
                <ImageView fx:id="searchImage" fitWidth="16.0" pickOnBounds="true" preserveRatio="true"
                           StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets bottom="5.0" left="5.0" right="10.0" top="5.0"/>
                    </StackPane.margin>
                </ImageView>
            </children>
        </StackPane>
        <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" hgap="5.0" vgap="5.0">
            <children>
                <RadioButton mnemonicParsing="false" text="All" selected="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="group"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton mnemonicParsing="false" text="Diseases" toggleGroup="$group"/>
                <RadioButton mnemonicParsing="false" text="Tissues" toggleGroup="$group"/>
                <RadioButton mnemonicParsing="false" text="Selected" toggleGroup="$group"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </FlowPane>
        <TableView fx:id="phenotypeTable" editable="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="select" editable="true" maxWidth="150.0" minWidth="75.0" prefWidth="100.0"
                             text="Select"/>
                <TableColumn fx:id="score" maxWidth="150.0" minWidth="75.0" prefWidth="100.0" text="Score"/>
                <TableColumn fx:id="name" prefWidth="75.0" text="Name"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
